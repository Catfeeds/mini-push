.page_main {
  width: 100%;
  /* height: calc(100% - 138rpx); */
  height: 100%;
}

.user {
  height: 190rpx;
  line-height: 190rpx;
  display: block;
}

.user > view {
  position: relative;
  float: left;
}

.user > .head > image {
  margin-left: 35rpx;
  margin-right: 35rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #bebebe;
  vertical-align: middle;
}

.user > .head > image::before {
  margin-left: 35rpx;
  margin-right: 35rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #bebebe;
  vertical-align: middle;
}

.user > .info {
  margin-top: -25rpx;
}

.user > .info  > label {
  height: 36rpx;
  padding: 10rpx 0rpx 10rpx 0rpx;
  display: block;
}

/* =============== 选项卡开始 =============== */

.swiper-tab {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  font-weight: bold;
  background-color: #f6f3ee;
}

.swiper-tab-item {
  width: 150rpx;
  height: 65rpx;
  margin: 0rpx 40rpx 0rpx 40rpx;
  display: inline-block;
  text-align: center;
  color: #666;
}

.active {
  color: #333;
  border-bottom: 5rpx solid #932c3f;
}

.content {
  padding: 20rpx 30rpx 20rpx 30rpx;
  background-color: #f6f3ee;
}

/* .content_bottom_border {
  border-bottom: 1rpx solid #d9d3cd;
} */

.con_main {
  margin: 0rpx;
  padding: 0rpx;
  border: 0rpx;
  width: 100%;
  min-height: 235rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.con_main .weui-grid image {
  margin: 0rpx 0rpx 0rpx 6rpx;
  width: calc((100vw - 60rpx) / 3 - 10rpx);
  height: calc((100vw - 60rpx) / 3 - 10rpx);
  border-radius: 10rpx;
}

.row-center {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

/* =============== 选项卡结束 =============== */
