/* pages/interact/index.wxss */
@import "../template/navigation.wxss";

.page_main_v {
  width: 100%;
  height: calc(100% - 138rpx);
  background-color: #932c3f;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.page_main_h {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tip {
  height: 40rpx;
  padding-bottom: 200rpx;
}

.operation {
  height: 600rpx;
}

.operation > view {
  align-items: center;
  padding: 20rpx 0rpx 20rpx 0rpx;
}

.operation > view > image {
  width: 60rpx;
  height: 60rpx;
  background-color: #f6f2ec;
  border-radius: 50%;
  vertical-align: middle;
}

.operation > view > label {
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 10rpx;
}
