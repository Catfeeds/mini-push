<view class="container">

  <!-- 选择图片 -->
  <view class="userinfo{{showView?'show':'hide'}} userinfo_page" >
    <view class='pic_tip_top'>
      <label>您已选择【</label><label>{{hotel_room}}</label><label>】电视</label>
    </view>
    <view class='pic_div_body'>
      <image class='choose_pic_show' src="{{tempFilePaths}}" mode="cover"></image>
      <view class="choose_button_pic firstchoose{{showFirst?'show':'hide'}}">
        <image class='choose_button' src='/images/button_pic_to_tv.png' bindtap="chooseImage" data-boxmac="{{box_mac}}" data-openid="{{openid}}" ></image>
      </view>
      <view class="rechoose_button_pic secondchoose{{showSecond?'show':'hide'}} ">
        <image bindtap="chooseImage" class='rechoose_button' src='/images/button_pic_to_tv.png'></image>
        <image bindtap="exitForscreen" class='rechoose_button button_space' data-boxmac="{{box_mac}}" src='/images/button_pic_to_tv.png'></image>
      </view>
    </view>
  </view>
  
  <!-- 输入验证 -->
  <form bindsubmit="formSubmit" class="form{{showCode?'show':'hide'}}">
    <label>请填写电视展示的验证码</label>
    <view class='content'>
      <block wx:for="{{Length}}" wx:key="item">
        <input class='iptbox' value="{{Value.length>=index+1?Value[index]:''}}" disabled password='{{ispassword}}' catchtap='Tap'></input>
      </block>
    </view>
    <input name="password" value="{{pwds}}" password="{{true}}" class='ipt' maxlength="{{Length}}" focus="{{isFocus}}" bindinput="Focus"></input>
    <input name="openid" class="userinfohide" value="{{openid}}"></input>
    <input name="box_mac" class="userinfohide" value="{{box_mac}}"></input>
    <view>
      <button class="btn-area" formType="submit">提交</button>
    </view>
  </form>

  <!-- 图片展示 -->

</view>
