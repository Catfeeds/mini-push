/* pages/forscreen/main/index.wxss */
.scroll_container{
  width: 100%;
  height: calc(100vh - 290rpx);
}

.article{
  margin: 0;
}
.separate{
  display:block;
  height:20rpx;
}

.article > .operation{
  margin-top: 218rpx;
  height: 48rpx;
  line-height: 48rpx;
  display: flex;
  flex-direction:row;
  align-items: center;
}
.article > .operation > button{
  width: 160rpx;
  height: 48rpx;
  line-height:48rpx;
  background: rgba(0, 0, 0, 0.3);
  color: #FAFAFA;
  font-size: 24rpx;
  border-radius: 24rpx;
  border: 1rpx solid #FFFFFF;
}

.article > .video_info{
  margin-top: 170rpx;
  margin-left: 10rpx;
  height: 36rpx;
  display: flex;
  text-align: center;
}
.article > .video_info > label{
  width:100rpx;
  height: 36rpx;
  line-height: 36rpx;
  color: #F6F2ED;
  font-size: 22rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 13rpx;
  z-index: 2;
}

.article > .cover{
  margin-top:-471rpx;
}
.article > .cover > image{
  width: 100%;
  height: 484rpx;
  background-color: #F26;
  z-index: 1;
}

.article > .title{
  margin-top:-7rpx; 
  padding: 30rpx 0 30rpx 25rpx;
  font-size: 30rpx;
  color: #434343;
  background: #FFFFFF;
}


.fix_container{
  width: 100%;
  height: 290rpx;
}

.fix_container > .top{
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  width:100%;
  height: 70rpx;
  line-height: 70rpx;
  display: flex;
  flex-direction:row;
  align-items: center;
  background: #FFFFFF;
}
.fix_container > .top > label{
  margin-left: 30rpx;
  font-size: 28rpx;
  color: #333333;
}
.fix_container > .top > button{
  width: 150rpx;
  height: 60rpx;
  font-size: 22rpx;
  color: #932C3F;
  border: 1rpx solid #932C3F;
  border-radius: 12rpx;
}

.fix_container > .operation{
  display: flex;
  flex-direction:row;
  align-items: center;
}
.fix_container > .operation > image{
  width: 335rpx;
  height: 160rpx;
  margin: 20rpx 30rpx 20rpx 30rpx;
}