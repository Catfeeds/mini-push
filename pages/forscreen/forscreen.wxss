/**index.wxss**/
.userinfohide {
  display: none;
}
.userinfoshow {
  display: block;
}

.full_page{
  width: 100%;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.content{
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: -220rpx;
}
.iptbox{
  margin-left: 29rpx;
  margin-right: 29rpx;
  width: 140rpx;
  height: 100rpx;
  border:1rpx solid #ffd237;
  text-align: center;
}
.ipt{
  width: 0;
  height: 0;
}
.btn-area{
  width: 80%;
  background-color: orange;
  color:white;
}
.formshow{
   display: block;
}
.formhide{
   display: none;
}

/* 输入验证码页面 */
view.input_num{
  padding:30rpx 30rpx 0rpx 30rpx;
  width: calc(100vw - 60rpx);
  display: flex;
  flex-direction: column;
  align-items: center;
}
image.input_pic_banner{
  width: 695rpx;
  height: 695rpx;
}
label.input_tip{
  margin-top: 36rpx;
  margin-bottom: 36rpx;
  font-size:34rpx;
  color: #333333;
}

/* 选择图片页面 */
view.pic_tip_top{
  margin-top: 0rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  display: block;
  height: 110rpx;
  line-height: 110rpx;
  font-size:32rpx;
  color: #333333;
  background-color: #faf8f5;
  box-shadow: 2rpx 2rpx 10rpx #dddddd;
}

view.pic_div_body{
  display: flex;
  flex-direction: column;
  align-items: center;
}

view.choose_pic_default_container{
  margin-top: 180rpx;
  margin-bottom: 180rpx;
  width: 543rpx;
  height: 403rpx; 
}

image.choose_pic_default{
  width: 100%;
  height: 100%;
}

.choose_button_pic{
  margin-top:0;
}

image.choose_button{
  width: 540rpx;
  height: 98rpx;
}

image.rechoose_button{
  width: 340rpx;
  height: 98rpx;
}

.button_space{
  margin-left: 10rpx;
}

.hide {
  display: none;
}
.show {
  display: block;
}
.firstchooseshow{
  display: block;
}
.firstchoosehide{
   display: none;
}
.secondchooseshow{
  display: block;
}
.secondchoosehide{
  display: none;
}

/* 选择图片展示页面 */
view.choose_pic_show_page{
  margin: 0;
  padding: 0;
  width: 100vw;
  height: 98vh;
}
view.choose_pic_show_container{
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
}
image.choose_pic_show{
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
}

.rechoose_button_pic{
  margin-top: -130rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
}

