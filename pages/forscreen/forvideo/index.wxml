<!-- pages/forscreen/forvideo/index.wxml -->

<!-- ================================== 视频 ================================== -->
<view class="container">
  <view class="choose_video_show_page full_width">
    <view class="full_width display_{{showVedio?'show':'hide'}}">
      <view class='launch_video_page_top flex_row_center font_333333_26'>
        <label>视频加载完成后，电视开始加载并自动播放</label>
        <label class='link_relief'>
          <navigator url="/pages/forscreen/relief">免责声明</navigator>
        </label>
      </view>
    </view>
    <view class='launch_video_page_main'>
      <view class='cover full_width'>
        <video class="screen_video" src='{{upload_vedio_temp}}' controls="false" show-fullscreen-btn="false" show-play-btn="false" show-center-play-btn="false" enable-progress-gesture="false" duration="0"></video>
        <view class='upload_progress'>
          <label class='font_932C3F_34'>{{vedio_percent}}%</label>
          <progress percent='{{vedio_percent}}' activeColor='#932C3F' backgroundColor="#CECAC4" />
        </view>
        <!-- <view class='tip'>
          <label class='font_932C3F_24'>视频加载完成后，电视开始加载并自动播放</label>
        </view>
        <view class='option'>
          <label class='font_932C3F_28 link_relief'>
            <navigator url="/pages/forscreen/relief">免责声明</navigator>
          </label>
        </view> -->
      </view>

      <!-- 投视频 -->
      <view class="display_{{showVedio?'hide':'show'}}">
        <label class='grant_auth'>
          <!--<checkbox checked="true">公开时显示餐厅信息</checkbox>-->
          <checkbox-group class="checkbox-group" bindchange="checkboxChange">
            <label class="items" wx:for="{{item}}" wx:key="key">
              <checkbox value="{{item.value}}" checked="{{item.checked}}" disabled="{{item.disabled}}">{{item.name}}</checkbox>
            </label>
          </checkbox-group>
        </label>
        <view class='bottom_btn'>
          <!--<button class="savor-btn savor-btn-size" form-type="submit" hover-class="none" style='width: 320rpx;background-color: #BEBEBE;margin-left: 15rpx;'>投屏</button>-->
          <button class="savor-btn savor-btn-size full_width" form-type="submit" hover-class="none">投屏</button>
        </view>
      </view>

      <!-- 重选 -->
      <view class="rechoose_button_video display_{{showVedio?'show':'hide'}}">
        <view class='font_333333_24'>
          <label style='margin:0 60rpx 0 60rpx;display: block;text-align: center; color:#666666;'>为保障个人隐私，热点投屏不会留存任何投屏记录，您所投内容将在退出投屏后系统自动销毁</label>
        </view>
        <view class='launch_video_page_bottom flex_row_center'>
          <button class='btn_background_034' bindtap='chooseVedio' data-boxmac="{{box_mac}}" data-openid="{{openid}}">重选视频</button>
          <button class='btn_background_034' bindtap="exitForscreen" data-boxmac="{{box_mac}}" data-openid="{{openid}}">退出投屏</button>
        </view>
      </view>
    </view>
  </view>

</view>