/* pages/forscreen/forvideo/index.wxss */


/** ================================== 投视频 ================================== **/
.launch_video_page_top{
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  background: #FFFFFF;
}
.launch_video_page_top > label{
  margin-left: 30rpx;
}
.launch_video_page_top > button{
  width: 150rpx;
  height: 60rpx;
}

.launch_video_page_main{
  margin-top: 250rpx;
  width: 100%;
  height: 484rpx;
}

.launch_video_page_main > view.cover > .screen_video{
  width: 100%;
  height: 484rpx;
  background-color: #932C3F;
  z-index: 1;
}

.launch_video_page_main > view.cover > .mask_layer{
  margin-top: -494rpx;
  width: 100%;
  height: 484rpx;
  opacity:0.7;
  background: #000000;
  position:absolute;
  z-index: 9999;
  line-height:1.2;
overflow:hidden;
white-space:nowrap;
pointer-events:auto;
}
.launch_video_page_main > view.cover > .mask_layer > view{
  margin-top: 202rpx;
  width: 450rpx;
  height: 60rpx;
  text-align:center;
  position:absolute;
  z-index: 9999;
}
.launch_video_page_main > view.cover > .mask_layer > progress{
  width: 450rpx;
  height: 5rpx;
  border-radius: 5rpx;
  position:absolute;
  z-index: 9999;
}

.launch_video_page_bottom{
  margin-top: calc(100vh - 972rpx);
  margin-bottom: 30rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.launch_video_page_bottom > button{
  width: 340rpx;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  margin: 0 5rpx 0 5rpx;
}