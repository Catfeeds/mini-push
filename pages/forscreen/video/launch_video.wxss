/* ================================== 点播页面 ================================== */

.article {
  width: 100vw;
}

.article > .video, .article > .video::before, .article > .video::after {
  margin: 280rpx 0rpx -10rpx 0rpx;
  padding: unset;
  border: unset;
  width: 100%;
}

.article > .video > video {
  margin: unset;
  padding: unset;
  border: unset;
  width: 100%;
}

.article > .title {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  /* display: flex;
  flex-direction:row;
  align-items: center; */
  background: #fff;
  text-align: center;
}

.article > .title > label {
  font-size: 30rpx;
  color: #434343;
}
